@model CanTeenVL.Models.CUSTOMER

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V18</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="@Url.Content("~/images/icons/faviconCustomer.ico")" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/vendorCustomer/bootstrap/css/bootstrap.min.css")">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/fontsCustomer/font-awesome-4.7.0/css/font-awesome.min.css")">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/fontsCustomer/Linearicons-Free-v1.0.0/icon-font.min.css")">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/vendorCustomer/animate/animate.css")">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/vendorCustomer/css-hamburgers/hamburgers.min.css")">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/vendorCustomer/animsition/css/animsition.min.css")">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/vendorCustomer/select2/select2.min.css")">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/vendorCustomer/daterangepicker/daterangepicker.css")">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/cssCustomer/util.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/cssCustomer/main.css")">
    <!--===============================================================================================-->
</head>
<body style="background-color: #666666;">

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form" action="@Url.Action("Login")" method="post">
                    <span class="login100-form-title p-b-43">
                        Login to continue
                    </span>


                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <input class="input100" type="text" name="email">
                        <span class="focus-input100"></span>
                        <span class="label-input100">Email</span>
                    </div>
                    @if (Convert.ToBoolean(Session["user-not-found"]) == true)
                    {
                        <p style="color:red">User not found</p>
                    }

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <input class="input100" type="password" name="password">
                        <span class="focus-input100"></span>
                        <span class="label-input100">Password</span>
                    </div>
                    @if (Convert.ToBoolean(Session["password-incorrect"]) == true)
                    {
                        <p style="color:red">Incorrect Password</p>
                    }
                    <div class="flex-sb-m w-full p-t-3 p-b-32">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
                                Remember me
                            </label>
                        </div>

                        <div>
                            <a href="#" class="txt1">
                                Forgot Password?
                            </a>
                        </div>
                    </div>
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Login
                        </button>
                    </div>
                    <div class="text-center p-t-46 p-b-20">
                        <span class="txt2">
                            or <a href="@Url.Action("SignUp","Customer")" class="txt1">sign up</a> using
                        </span>
                    </div>

                </form>
                    <div class="login100-more" style="background-image: url('http://cntttest.vanlanguni.edu.vn:18080/AD1Team3/Images/bg-Customer.jpg');">
                    </div>
            </div>
        </div>
    </div>





    <!--===============================================================================================-->
    <script src="@Url.Content("~/vendorCustomer/jquery/jquery-3.2.1.min.js")"></script>
    <!--===============================================================================================-->
    <script src="@Url.Content("~/vendorCustomer/animsition/js/animsition.min.js")"></script>
    <!--===============================================================================================-->
    <script src="@Url.Content("~/vendorCustomer/bootstrap/js/popper.js")"></script>
    <script src="@Url.Content("~/vendorCustomer/bootstrap/js/bootstrap.min.js")"></script>
    <!--===============================================================================================-->
    <script src="@Url.Content("~/vendorCustomer/select2/select2.min.js")"></script>
    <!--===============================================================================================-->
    <script src="@Url.Content("~/vendorCustomer/daterangepicker/moment.min.js")"></script>
    <script src="@Url.Content("~/vendorCustomer/daterangepicker/daterangepicker.js")"></script>
    <!--===============================================================================================-->
    <script src="@Url.Content("~/vendorCustomer/countdowntime/countdowntime.js")"></script>
    <!--===============================================================================================-->
    <script src="@Url.Content("~/jsCustomer/main.js")"></script>

</body>
</html>


@model CanTeenVL.Models.STATUS_BILL

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2 style="text-align:center">Delete Status</h2>
<br />
<h3 style="text-align:center"><b>Are you sure you want to delete this?</b></h3>
<div>
    <div class="card card-primary">
        <div class="card-header">
            <h1 class="card-title">Delete</h1>
        </div>
        <form>
            <div class="card-body">
                <div class="row">
                    <div class="form-group col-md-12">
                        <label for="exampleInputPassword1">Name</label>
                        <div class="form-control" disabled style="background-color: #e9ecef;color: #A9A9A9">
                            @MvcHtmlString.Create(Model.NAME)
                        </div>
                    </div>
                </div>
            </div>
        </form>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="card-footer">
        <input type="submit" value="Delete" class="btn btn-primary" />
        <a href="@Url.Action("Index","StatusBill")" class="btn btn-primary">Cancel</a>
    </div>
        }
    </div>
</div>

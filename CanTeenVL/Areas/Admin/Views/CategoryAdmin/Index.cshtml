@model IEnumerable<CanTeenVL.Models.CATEGORY>

@{
    //ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <!-- /.card-header -->
    <div class="card-body">
        <h2 style="text-align:center">List Category</h2>
        <a href="@Url.Action("Create","CategoryAdmin")" class="btn btn-primary col-1">Create New</a>
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CATEGORY_CODE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CATEGORY_NAME)
                        </td>
                        <td>
                            <img src="@Url.Action("Picture", new { item.ID})" width="130px" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.STATUS)
                        </td>
                        <td>
                            <a href=@Url.Action("Edit", new { item.ID})>
                                <i class="fas fa-edit" style="width:20px"></i>
                            </a>
                            <a href=@Url.Action("Details", new { item.ID})>
                                |
                                <i class="fas fa-info"></i>
                            </a>
                            <a href=@Url.Action("Delete", new { item.ID})>
                                |
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>


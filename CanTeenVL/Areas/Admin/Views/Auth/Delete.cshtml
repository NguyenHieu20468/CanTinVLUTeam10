@model CanTeenVL.Models.ACCOUNT

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2 style="text-align:center">Delete Account</h2>
<br />
<h3>Are you sure you want to delete this?</h3>
<div>

    <div class="card card-primary">
        <div class="card-header">
            <h1 class="card-title">Delete</h1>
        </div>
        <form>
            <div class="card-body">
                <div class="row">
                    <div class="form-group col-md-12">
                        <label for="exampleInputPassword1">Name</label>
                        <div class="form-control" disabled style="background-color: #e9ecef;color: #A9A9A9">
                            @MvcHtmlString.Create(Model.EMAIL)
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label for="exampleInputPassword1">Name</label>
                        <div class="form-control" disabled style="background-color: #e9ecef;color: #A9A9A9">
                            @MvcHtmlString.Create(Model.PASSWORD)
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label for="exampleInputPassword1">Name</label>
                        <div class="form-control" disabled style="background-color: #e9ecef;color: #A9A9A9">
                            @MvcHtmlString.Create(Model.FULL_NAME)
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label for="exampleInputPassword1">Name</label>
                        <div class="form-control" disabled style="background-color: #e9ecef;color: #A9A9A9">
                            @Html.DisplayFor(model => model.ROLE)
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="custom-control custom-checkbox">
                            <input class="custom-control-input" type="checkbox" disabled @Html.DisplayFor(model => model.STATUS)
                            <label for="customCheckbox3" class="custom-control-label">STATUS</label>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="card-footer">
                <input type="submit" value="Delete" class="btn btn-primary" />
                <a href="@Url.Action("Index","Auth")" class="btn btn-primary">Cancel</a>
            </div>
        }
    </div>
</div>

